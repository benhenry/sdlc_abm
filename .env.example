# SDLC SimLab - Environment Variables Template
# Copy this file to .env and fill in your values

# Database (async PostgreSQL for FastAPI)
DATABASE_URL=postgresql+asyncpg://simlab:simlab_dev@postgres:5432/sdlc_simlab
# For local development without Docker, use:
# DATABASE_URL=postgresql+asyncpg://simlab:simlab_dev@localhost:5432/sdlc_simlab

# PostgreSQL Configuration (for Docker)
POSTGRES_DB=sdlc_simlab
POSTGRES_USER=simlab
POSTGRES_PASSWORD=simlab_dev

# Redis (for caching and WebSocket pub/sub)
REDIS_URL=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here-change-in-production

# GitHub Integration (optional)
GITHUB_TOKEN=

# GitLab Integration (optional)
GITLAB_TOKEN=
GITLAB_URL=https://gitlab.com

# Jira Integration (optional - P1)
JIRA_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Frontend Configuration
FRONTEND_URL=http://localhost:3000  # For CORS
VITE_API_URL=http://localhost:8000  # API endpoint for frontend
VITE_WS_URL=ws://localhost:8000     # WebSocket endpoint for frontend

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Celery Workers (use separate Redis databases)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Simulation Defaults
DEFAULT_TIME_STEP_DAYS=1
MAX_SIMULATION_DURATION_WEEKS=104  # 2 years
DEFAULT_MONTE_CARLO_RUNS=100
