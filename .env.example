# SDLC SimLab - Environment Variables Template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sdlc_simlab
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./sdlc_simlab.db

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here-change-in-production

# GitHub Integration (optional)
GITHUB_TOKEN=

# GitLab Integration (optional)
GITLAB_TOKEN=
GITLAB_URL=https://gitlab.com

# Jira Integration (optional - P1)
JIRA_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Celery Workers
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Simulation Defaults
DEFAULT_TIME_STEP_DAYS=1
MAX_SIMULATION_DURATION_WEEKS=104  # 2 years
DEFAULT_MONTE_CARLO_RUNS=100
